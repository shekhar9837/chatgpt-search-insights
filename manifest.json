{
    "name": "ChatGPT Analyse Search by Listable Labs",
    "version": "1.0.0",
    "description": "A ChatGPT extension that provides analyse search for the current page.",
    "manifest_version": 3,
    "devtools_page": "devtools.html",

    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },

    "web_accessible_resources": [{
        "resources": ["icon.png"],
        "matches": ["https://chatgpt.com/*", "https://www.perplexity.ai/*", "https://perplexity.ai/*"]
    }],
  
    "background": {
        "service_worker": "background.js"
    },

    "permissions": ["webRequest", "debugger", "storage", "tabs", "activeTab"],

    "host_permissions": ["https://*/*"],
    "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content-bridge.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["inject-main.js"],
      "world": "MAIN",
      "run_at": "document_start"
    },
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["inject-ui-template.js", "inject-ui.js"],
      "css": ["inject-ui.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.perplexity.ai/*", "https://perplexity.ai/*"],
      "js": ["content-bridge.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://www.perplexity.ai/*", "https://perplexity.ai/*"],
      "js": ["inject-main.js"],
      "world": "MAIN",
      "run_at": "document_start"
    },
    {
      "matches": ["https://www.perplexity.ai/*", "https://perplexity.ai/*"],
      "js": ["inject-ui-template.js", "inject-ui.js"],
      "css": ["inject-ui.css"],
      "run_at": "document_idle"
    }
  ]
  }
  