{
    "name": "ChatGPT Search Insights by Listable Labs",
    "version": "1.0.0",
    "description": "A ChatGPT extension that provides search insights for the current page.",
    "manifest_version": 3,
    "devtools_page": "devtools.html",

    "action": {
        "default_popup": "index.html",
        "default_title": "ChatGPT Search Insights",
        "default_icon": "258010212.png"
    },

    "icons": {
        "16": "258010212.png",
        "48": "258010212.png",
        "128": "258010212.png"
    },

    "web_accessible_resources": [{
        "resources": ["258010212.png"],
        "matches": ["https://chatgpt.com/*"]
    }],
  
    "background": {
        "service_worker": "background.js"
    },

    "permissions": ["webRequest", "debugger", "storage", "tabs", "activeTab"],

    "host_permissions": ["https://*/*"],
    "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content-bridge.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["inject-main.js"],
      "world": "MAIN",
      "run_at": "document_start"
    },
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["inject-ui-template.js", "inject-ui.js"],
      "css": ["inject-ui.css"],
      "run_at": "document_idle"
    }
  ]
  }
  